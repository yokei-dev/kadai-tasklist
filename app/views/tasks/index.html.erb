<% if logged_in? %>

    <h1>タスク一覧</h1>

    <% @tasks.each do |task| %>
        <p><%=link_to task.id, task%>内容:<%= task.content %>ステータス:<%= task.status%></p>
    <% end %>
    <%= paginate @tasks %>

    <%= link_to 'タスクの新規作成', new_task_path %>

<% else %>

    <h1>Welcome to Tasklist</h1>
    <h3><%=link_to 'Signup', signup_path%></h3>

<% end %>